{% extends 'base.html.twig' %}

{% block title %}Connexion - Zoo Arcadia{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .login-container {
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(to right, #e6f0e6, #fdfaf4);
    }
    .login-card {
        background-color: #f5f1ea;
        border-radius: 1rem;
        padding: 2.5rem;
        max-width: 460px;
        width: 100%;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.5s ease-in-out;
    }
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .login-title {
        color: #3b5d3b;
    }
    .btn-login {
        background-color: #3b5d3b;
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: 0.6rem 1.5rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
        width: 100%;
    }
    .btn-login:hover {
        background-color: #2e4a2f;
        transform: scale(1.02);
    }
    .form-control {
        border-radius: 8px;
    }
    .form-label {
        font-weight: bold;
    }






.g-recaptcha {
    display: inline-block;
    transform: scale(1);
    transform-origin: center;
    margin-left: 10%;
}




</style>
{% endblock %}




{% block body %}
{# script important pour afficher reCAPTCHA #}
<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<div class="login-container">
    <div class="login-card">
        <div class="text-center mb-4">
            <i class="bi bi-shield-lock-fill fs-1 text-success"></i>
            <h2 class="mt-2 login-title">Connexion</h2>
            <p class="text-muted">Accédez à votre espace sécurisé</p>
        </div>

        {% if error %}
            <div class="alert alert-danger" role="alert">
                Identifiants incorrects. Veuillez réessayer.
            </div>
        {% endif %}

        {# Démarre le formulaire ici, incluant tous les champs y compris le captcha #}
        {{ form_start(captchaForm, { attr: { method: 'post', action: path('login') } }) }}
            <div class="mb-3">
                <label for="username" class="form-label">Adresse e-mail</label>
                <input type="text" name="_username" id="username" class="form-control" value="{{ last_username }}" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" required>
            </div>

         

<div class="mb-3 text-center">
    <div class="g-recaptcha" data-sitekey="{{ recaptcha_site_key }}"></div>
</div>








            <div class="d-grid">
                <button type="submit" class="btn btn-login">Se connecter</button>
            </div>



        {{ form_end(captchaForm) }}

        <p class="text-center mt-3">
            <a href="#" class="text-muted text-decoration-none">Mot de passe oublié ?</a>
        </p>
    </div>
</div>


<script>
document.getElementById('form_login').addEventListener('submit', async function(e) {
    e.preventDefault();

    const form = e.target;
    const formData = new FormData(form);

    const res = await fetch("/login_check", {
        method: "POST",
        body: formData,
    });

    const json = await res.json();

    if (json.success) {
        form.submit(); // ou redirige manuellement
    } else {
        alert(json.error);
    }
});
</script>


{% endblock %}

