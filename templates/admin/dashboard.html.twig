{% extends 'base.html.twig' %}

{% block title %}Admin - Tableau de bord{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Tableau de bord Admin - Zoo Arcadia</h1>

    <div class="row text-center">
        <div class="col-md-4">
            <div class="card bg-success text-white mb-4 shadow">
                <div class="card-body">
                    <h5 class="card-title">Nombre d'animaux</h5>
                    <p class="display-6">{{ animal_count }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-info text-white mb-4 shadow">
                <div class="card-body">
                    <h5 class="card-title">Employés enregistrés</h5>
                    <p class="display-6">{{ user_count }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <a href="{{ path('admin') }}" class="btn btn-primary w-100 h-100 p-4 fs-5 shadow">
                <i class="fas fa-paw me-2"></i> Gérer les animaux
            </a>
        </div>
    </div>
</div>
{% endblock %}

