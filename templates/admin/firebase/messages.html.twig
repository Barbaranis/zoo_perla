{% extends 'base.html.twig' %}


{% block title %}Avis visiteurs - Administration{% endblock %}


{% block body %}
<div class="container mt-5">
    <h2>Gestion des avis visiteurs</h2>


    {% if messages %}
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Nom</th>
                    <th>Message</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for key, message in messages %}
                    <tr>
                        <td>{{ message.created_at ?? '---' }}</td>
                        <td>{{ message.nom ?? 'Anonyme' }}</td>
                        <td>{{ message.message }}</td>
                        <td>
                            <form method="post" action="{{ path('delete_firebase_message', { key: key }) }}" onsubmit="return confirm('Supprimer ce message ?');">
                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun message trouv√©.</p>
    {% endif %}
</div>
{% endblock %}


