{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Zoo Arcadia{% endblock %}

{% block stylesheets %}
<style>
    .reset-container {
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(to right, #3b5d3b, #8f735b);
        color: white;
        padding: 2rem;
    }
    .reset-card {
        background-color: #fdfaf4;
        color: #333;
        padding: 2rem;
        border-radius: 1rem;
        max-width: 500px;
        width: 100%;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }
    .reset-card h2 {
        color: #3b5d3b;
    }
    .btn-reset {
        background-color: #3b5d3b;
        color: white;
        width: 100%;
        border-radius: 8px;
        padding: 0.6rem;
        transition: all 0.3s ease;
    }
    .btn-reset:hover {
        background-color: #2d4a2d;
        transform: scale(1.03);
    }
</style>
{% endblock %}

{% block body %}
<div class="reset-container">
    <div class="reset-card">
        <h2 class="text-center mb-4">Mot de passe oublié ?</h2>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {{ form_start(requestForm) }}
            <div class="mb-3">
                {{ form_label(requestForm.email) }}
                {{ form_widget(requestForm.email) }}
                {{ form_errors(requestForm.email) }}
            </div>
            <button type="submit" class="btn btn-reset">Envoyer le lien de réinitialisation</button>
        {{ form_end(requestForm) }}
    </div>
</div>
{% endblock %}

