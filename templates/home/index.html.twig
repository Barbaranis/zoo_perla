{% extends 'base.html.twig' %}

{% block title %}Accueil - Zoo Arcadia{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    body {
        background: linear-gradient(to bottom right, #e6e3d3, #c5baa0);
        font-family: 'Segoe UI', sans-serif;
        color: #333;
        line-height: 1.6;
    }
    h2, h3 {
        color: #2e4a2f;
    }

    p {
      color:rgb(16, 19, 16)
    }
    section {
        padding: 4rem 0;
      
    }
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 1rem;
    }
    .card:hover {
        transform: scale(1.02);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }
    .btn-action {
        background-color: #8f735b;
        color: white;
        font-weight: bold;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    .btn-action:hover {
        background-color: #5f432e;
        color: #fff;
        transform: scale(1.05);
    }
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: #8f735b;
        border-radius: 50%;
        padding: 0.6rem;
    }
</style>
{% endblock %}

{% block body %}
<!-- HERO -->
<div id="zooCarousel" class="carousel slide position-relative" data-bs-ride="carousel" style="height: 100vh; overflow: hidden;">
  <div class="carousel-inner h-100">
    {% set images = [
      { 'src': 'image/marais1.webp', 'alt': 'Environnement marais avec oiseaux et loutres' },
      { 'src': 'image/jungle1.webp', 'alt': 'Forêt tropicale avec singes et perroquets' },
      { 'src': 'image/enclosgirafe.webp', 'alt': 'Savane avec girafes et zèbres' }
    ] %}
    {% for img in images %}
    <div class="carousel-item {% if loop.first %}active{% endif %} h-100">
      <img src="{{ asset(img.src) }}" class="d-block w-100 h-100 object-fit-cover" alt="{{ img.alt }}" loading="lazy">
    </div>
    {% endfor %}
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#zooCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Précédent</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#zooCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Suivant</span>
  </button>
  <div class="position-absolute top-50 start-50 translate-middle bg-light bg-opacity-75 p-4 rounded text-center shadow">
    <h1 class="display-5 fw-bold text-success">Bienvenue au Zoo Arcadia</h1>
    <p class="lead">Un univers magique où la nature vous attend</p>
  </div>
</div>

<!-- ENVIRONNEMENTS -->
<section class="container">
  <h2 class="text-center mb-5">Nos environnements naturels</h2>
  <div class="row g-4">
    {% set habitats = [
      { 'title': 'Savane', 'image': 'image/enclosgirafe.webp', 'alt': 'Girafes dans la savane', 'desc': 'Girafes, zèbres et antilopes dans une plaine dorée' },
      { 'title': 'Jungle', 'image': 'image/jungle2.webp', 'alt': 'Jungle tropicale', 'desc': 'Forêt dense et humide peuplée d’animaux exotiques' },
      { 'title': 'Marais', 'image': 'image/marais2.webp', 'alt': 'Zone humide', 'desc': 'Loutres, grenouilles et oiseaux migrateurs vous attendent' }
    ] %}
    {% for h in habitats %}
    <div class="col-md-4">
      <article class="card shadow-sm h-100">
        <img src="{{ asset(h.image) }}" alt="{{ h.alt }}" class="card-img-top" style="height: 220px; object-fit: cover;">
        <div class="card-body text-center">
          <h3 class="h5 text-success fw-bold">{{ h.title }}</h3>
          <p class="text-muted">{{ h.desc }}</p>
        </div>
      </article>
    </div>
    {% endfor %}
  </div>
</section>

<!-- SERVICES -->
<section class="container">
  <h2 class="text-center mb-5">Nos services</h2>
  <div class="row g-4 justify-content-center">
    {% set services = [
      { 'title': 'Restauration', 'image': 'image/restaurant.jpg', 'desc': 'Plats locaux dans un cadre verdoyant', 'alt': 'Restaurant du zoo' },
      { 'title': 'Visite guidée', 'image': 'image/visite.webp', 'desc': 'Découverte du zoo avec guide animalier', 'alt': 'Visite commentée' },
      { 'title': 'Boutique souvenir', 'image': 'image/souvenir.jpg', 'desc': 'Souvenirs et peluches magiques', 'alt': 'Boutique du zoo' }
    ] %}
    {% for s in services %}
    <div class="col-md-4">
      <article class="card shadow-sm h-100">
        <img src="{{ asset(s.image) }}" alt="{{ s.alt }}" class="card-img-top" style="height: 230px; object-fit: cover;">
        <div class="card-body text-center">
          <h3 class="h5 text-success">{{ s.title }}</h3>
          <p class="text-muted">{{ s.desc }}</p>
        </div>
      </article>
    </div>
    {% endfor %}
  </div>
</section>

<!-- OFFRES -->
<section class="container">
  <h2 class="text-center mb-5">Nos offres spéciales</h2>
  <div class="row g-4">
    {% set offres = [
      { 'titre': 'Offre Duo', 'image': 'image/offre_duo.jpg', 'description': '2 adultes = boisson offerte', 'alt': 'Couple dans le zoo' },
      { 'titre': 'Parent + Enfant', 'image': 'image/offre_parent_enfant.jpg', 'description': 'Animation gratuite offerte', 'alt': 'Parent et enfant souriants' },
      { 'titre': 'Pack Famille', 'image': 'image/offre_famille.jpg', 'description': '15 % de réduction et goodies', 'alt': 'Famille dans le parc' },
      { 'titre': 'Visite & Boutique', 'image': 'image/offre_visite_boutique.jpg', 'description': '10 % boutique après visite', 'alt': 'Souvenirs' }
    ] %}
    {% for o in offres %}
    <div class="col-md-6 col-lg-3">
      <article class="card shadow-sm h-100">
        <img src="{{ asset(o.image) }}" alt="{{ o.alt }}" class="card-img-top" style="height: 200px; object-fit: cover;">
        <div class="card-body text-center">
          <h3 class="h6 fw-bold text-dark">{{ o.titre }}</h3>
          <p class="text-muted">{{ o.description }}</p>
          <a href="#reservation" class="btn btn-outline-success btn-sm">En profiter</a>
        </div>
      </article>
    </div>
    {% endfor %}
  </div>
</section>

<!-- ÉVÉNEMENTS -->
<section class="container">
  <h2 class="text-center mb-5">Événements à venir</h2>
  <div class="row g-4">
    {% for event in events %}
    <div class="col-md-6 col-lg-4">
      <article class="card h-100 event-card shadow" style="background: linear-gradient(135deg, #e7d9c1, #a18565); color: #fff;">
        <div class="card-body">
          <h3 class="h5 fw-bold">{{ event.title }}</h3>
          <p>{{ event.description }}</p>
          <span class="badge bg-light text-dark">{{ event.date|date('d F Y') }}</span>
        </div>
        <div class="event-hover-overlay d-flex justify-content-center align-items-center position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 rounded" style="opacity: 0; transition: opacity 0.3s;">
          {% if event.id is defined %}
          <a href="{{ path('reservation', { id: event.id }) }}" class="btn btn-warning">Réserver</a>
          {% else %}
          <span class="text-white">Bientôt disponible</span>
          {% endif %}
        </div>
      </article>
    </div>
    {% endfor %}
  </div>
</section>

<!-- AVIS -->
<section class="container">
  <h2 class="text-center mb-4">Ce que disent nos visiteurs</h2>
  {% if messages is not empty %}
  <div id="avisCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      {% for key, message in messages %}
      <div class="carousel-item {% if loop.first %}active{% endif %}">
        <div class="card p-4 mx-auto" style="max-width: 600px; background-color: #fdfaf4;">
          <blockquote class="blockquote text-center">
            <p class="mb-2">“{{ message.message }}”</p>
            <footer class="blockquote-footer">Anonyme</footer>
          </blockquote>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
  {% else %}
  <p class="text-center text-muted">Aucun avis pour le moment.</p>
  {% endif %}
</section>

<!-- FORMULAIRE AVIS -->
<section class="container">
  <h2 class="text-center mb-4">Laisser un avis</h2>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm border-0 bg-light">
        <div class="card-body">
          {{ form_start(avisForm) }}
          <div class="mb-3">
            {{ form_label(avisForm.message) }}
            {{ form_widget(avisForm.message, {'attr': {'class': 'form-control', 'placeholder': 'Écrivez votre avis...'}}) }}
            {{ form_errors(avisForm.message) }}
          </div>
          <button type="submit" class="btn btn-success w-100">Envoyer</button>
          {{ form_end(avisForm) }}
        </div>
      </div>
    </div>
  </div>
</section>

<!-- APPEL À L’ACTION -->
<section class="text-center py-5" style="background: linear-gradient(to right, #3b5d3b, #8f735b); color: white;">
  <div class="container">
    <h2 class="mb-4">Prêt pour l’aventure ?</h2>
    <a href="/contact" class="btn btn-action m-2">Nous contacter</a>
    <a href="/animaux" class="btn btn-outline-light m-2">Voir les animaux</a>
  </div>
</section>

{% endblock %}

