  <!-- Texte hero par-dessus -->
  <div class="position-absolute top-50 start-50 translate-middle text-center bg-white bg-opacity-75 p-4 rounded shadow">
    <h1 class="display-4 text-dark">Bienvenue au Zoo Arcadia</h1>
    <p class="lead text-dark">Un univers enchanteur peuplé de créatures extraordinaires vous attend !</p>
  </div>
</div>


