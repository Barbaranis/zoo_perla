{% extends 'base.html.twig' %}

{% block title %}Contact - Zoo Arcadia{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .contact-title {
        color: #3b5d3b;
        font-weight: bold;
    }
    .btn-contact {
        background-color: #3b5d3b;
        color: white;
        border: none;
        padding: 0.6rem 2rem;
        border-radius: 10px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }
    .btn-contact:hover {
        background-color: #2e4a2f;
        transform: scale(1.05);
    }
    iframe {
        border-radius: 12px;
    }
</style>
{% endblock %}

{% block body %}
<section class="container my-5">
    <div class="row g-5">
        <!-- Formulaire -->
        <div class="col-md-6">
            <h2 class="mb-4 contact-title">Nous écrire</h2>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            <form action="{{ path('contact') }}" method="POST" class="row g-3 needs-validation" novalidate>
                <div class="col-md-6">
                    <label for="nom" class="form-label">Nom</label>
                    <input type="text" class="form-control" id="nom" name="nom" required>
                </div>
                <div class="col-md-6">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="col-md-6">
                    <label for="telephone" class="form-label">Téléphone</label>
                    <input type="tel" class="form-control" id="telephone" name="telephone" required>
                </div>
                <div class="col-md-6">
                    <label for="objet" class="form-label">Objet</label>
                    <select class="form-select" id="objet" name="objet" required>
                        <option value="">Choisissez un objet</option>
                        <option value="visite">Infos sur les visites</option>
                        <option value="animaux">Questions sur les animaux</option>
                        <option value="service">Services du zoo</option>
                        <option value="autre">Autre</option>
                    </select>
                </div>



                
                <div class="col-12">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                </div>







<div class="col-12">
    <div class="form-check">
        <input class="form-check-input" type="checkbox" id="consentement" name="consentement" required>
        <label class="form-check-label" for="consentement">
            J’accepte que mes données soient utilisées pour me répondre.
        </label>
    </div>
</div>


<div class="g-recaptcha" data-sitekey="{{ recaptcha_site_key }}"></div>



                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-contact">Envoyer</button>
                </div>

 

            </form>

            
  

        </div>

        <!-- Carte + Adresse -->
        <div class="col-md-6">
            <h2 class="mb-4 contact-title">Nous trouver</h2>

            <div class="ratio ratio-4x3 shadow">
                <iframe src="https://www.google.com/maps?q=Forêt+de+Brocéliande&output=embed"
                        allowfullscreen loading="lazy" referrerpolicy="no-referrer-when-downgrade"
                        title="Carte du Zoo Arcadia">
                </iframe>
            </div>

            <address class="mt-4 text-muted">
                <strong>Adresse :</strong><br>
                12 rue de l'invention<br>
                Forêt de Brocéliande<br>
                01 30 39 37 45
            </address>
        </div>
    </div>
</section>


<script src="https://www.google.com/recaptcha/api.js" async defer></script>




{% endblock %}

