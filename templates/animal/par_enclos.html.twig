{% extends 'base.html.twig' %}

{% block title %}Animaux de l'enclos - Zoo Arcadia{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .card-img-top {
        height: 250px;
        object-fit: cover;
        border-top-left-radius: 0.75rem;
        border-top-right-radius: 0.75rem;
    }
    .card {
        border-radius: 0.75rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
        transform: scale(1.02);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }
</style>
{% endblock %}

{% block body %}
<div class="container my-5">
    <h2 class="text-center mb-5 display-5 fw-bold text-success-emphasis">Animaux de cet enclos</h2>

    <div class="row">
        {% if animaux is not empty %}
            {% for animal in animaux %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <article class="card shadow-sm h-100">
                        <img src="{{ asset('uploads/' ~ animal.photo) }}" class="card-img-top" alt="Photo de {{ animal.nom }}" loading="lazy">
                        <div class="card-body text-center">
                            <h3 class="h5 text-success fw-bold">{{ animal.nom }}</h3>
                            <p class="text-muted mb-1">{{ animal.espece }}</p>
                            <p class="small">Âge : {{ animal.age }} an{{ animal.age > 1 ? 's' }}</p>
                            <p class="small">Arrivé le : {{ animal.dateArrivee|date('d/m/Y') }}</p>
                        </div>
                    </article>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12 text-center">
                <p class="text-muted fs-5">Aucun animal trouvé pour cet enclos.</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

